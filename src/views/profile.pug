extends layout

block content
	div.container(ng-controller="profileCtrl as pc" layout="row" layout-align="center" flex)
		md-content.md-padding(layout="column" flex)
			h1.md-display-3 Welcome #{name}&#33;

		
			form(ng-submit="updateUserSummary()")

				md-input-container
					label(for="summary") ABOUT YOU:
					textarea#summary(name="summary" placeholder="Say something about yourself..." ng-model="summary")
				md-button(type="submit") post

			p(flex) {{user.summary}}

		// h4.md-display-1 {{message}}
		md-sidenav.md-padding.md-whiteframe-4dp(md-is-locked-open="true" layout="column" flex="40")
			div(ng-repeat="post in user.posts")
				h2.md-display-2 {{post.title}}
				p {{post.postDate | date : "dd MMM, y - HH:mm"}}
				p {{post.content}}
				p By {{post.author}}
				md-button(ng-click="deletePost($index)") delete
